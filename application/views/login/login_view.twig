{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - login{% endblock title %}

{% block container %}
    <div class="row">
        {% block menuVertical%}{% endblock menuVertical%}
        {% block content %}
        <div class="span12">
            <div class="well">
                <a href="/inscription/login/loginfb" class="btn pull-right">Login facebook</a>
                <form action="/inscription/verifylogin" method="POST" class="form-horizontal">
                    <fieldset>
                        <legend>Connectez Vous</legend>
                            <div class="login">
                                {{ validation_errors() }}
                            </div>
                            <div class="control-group offset2">
                                <label class="control-label" for="Nom utilisateur">Nom utilisateur:</label> 
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-user"></i></span>
                                        <input type="text" class="input-xlarge" name="login" class="input-xlarge" placeholder="Votre Nom d'utilisateur" value ="{% if app.request.cookies.has('cookiemail') %} {{app.request.cookies('cookiemail')}} {% endif%}"/>                       
                                    </div>
                                </div>
                            </div>

                            <div class="control-group offset2">
                                <!-- Password-->
                                <label class="control-label" for="Mot de passe">Mot de passe:</label>
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-lock"></i></span>
                                        <input type="password" id="pwd" name="pwd" class="input-xlarge" placeholder="Votre Mot de Passe" value ="{% if app.request.cookies.has('cookiepass') %} {{app.request.cookies('cookiepass')}} {% endif%}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group offset2">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" name="remember" value="1"> Se souvenir de moi
                                    </label>
                                </div>                                      
                            </div>
                            <div class="control-group offset2">
                                <!-- Button -->
                                <div class="controls">
                                    <button class="btn btn-info">Se connecter</button>
                                    <a href="forgotpwd/mail">Mot de passe oublier ?</a>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        {% endblock content %}
        </div>
        {% block partenaires %} {{parent()}} {% endblock partenaires %}
{% endblock container %}
