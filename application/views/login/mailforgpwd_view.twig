{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Mote de Passe Oublier{% endblock title %}

{% block container %}
    <div class="row">
        {% block menuVertical%}{% endblock menuVertical%}
        {% block content %}
        <div class="span12">
            <div class="well">
                <form action="verifmail" method="POST" class="form-horizontal">
                    <fieldset>
                        <legend>Entrez votre email</legend>
                            <div class="login offset2">
                                {{ validation_errors() }}
                              </div>
                            <div class="control-group offset2">
                                <label class="control-label" for="email">E-mail</label>
                                <div class="controls">
                                    <input type="email" name="email" placeholder="Votre E-mail" class="input-xlarge" value="{{ setvalue.email }}">
                                    <div class="error">
                                        {{ form_error('email') }}         
                                    </div>
                                </div>
                            </div>
                             <div class="control-group offset2">
                                <!-- Button -->
                                <div class="controls">
                                    <button class="btn btn-info">Confirmer</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        {% endblock content %}
        </div>
        {% block partenaires %} {{parent()}} {% endblock partenaires %}
{% endblock container %}
