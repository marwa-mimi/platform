{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Ajouter Annonce{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well">            <div class="row-fluid">                   <ul class="nav nav-pills border">                        <li class="pull-left"><h4>Ajouter Une Annonce</h4></li>                        <li class="pull-right"><a href="/annonce/annonce">Gestion des annonces</a></li>                        <li class="pull-right"><a href="/produit/produit">Gestion des produits</a></li>                     </ul>                <form action="/annonce/annonce/addannonce" method="POST" class="form-horizontal offset2" enctype="multipart/form-data">                    <fieldset>                            {#---Titre---#}                            <div class="control-group">                                <label class="control-label" for="titre">Titre <span class="required">*</span></label>                                <div class="controls">                                    <input type="text" name="titre" for="titre" placeholder="Titre" class="input-xlarge" required="required">                                 </div>                                <div class="controls">                                    <div class="error">                                        {{ form_error('titre') }}                                             </div>                                </div>                            </div>                                                        {#---Contenu---#}                            <div class="control-group">                                <label class="control-label" for="contenu" >Contenu <span class="required">*</span></label>                                <div class="controls">                                    <input type="text" name="contenu" placeholder="Le contenu" class="input-xlarge" required="required">                                    <div class="error">                                        {{ form_error('contenu') }}                                             </div>                                </div>                            </div>                                                         {#---Photo---#}                            <div class="control-group">                                <label class="control-label" for="userfile" >Photo <span class="required">*</span></label>                                <div class="controls">                                    <input type="file" name="userfile" size="20" required="required"/>                                </div>                            </div>                                                    {#---Valider---#}                            <div class="control-group">                                <div class="controls">                                    <button type="submit" name="submit" class="btn btn-info">Valider</button>                                    <button type="reset" name="annuler" class="btn btn-info">Annuler</button>                                </div>                            </div>                    </fieldset>                </form>            </div>                 </div>           </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}    {% endblock content %}