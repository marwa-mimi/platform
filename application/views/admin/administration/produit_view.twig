{% extends "/layout/admin-layout.twig" %}

{% block title %} {{parent()}} - Détails d'un produit{% endblock title %}

{% block container %}
        {% block content %}
        <div class="span12">
            <div class="well">
                       <ul class="nav nav-pills" style="border-bottom: 1px solid #cccccc">
                            <li class="pull-left"><h4>Détails d'un produit</h4></li>
                       </ul>
                    <div class="span3">
                       <img src="{{ finalpath }}" alt="" height="159" class="img-polaroid" >
                    </div>  
                    
                    <div class="span8">
                        <div class="span4">
                            <p class="colorlabel"><strong>Catégorie : </strong> <span>{{ categorie.titre}}</span> </p>
                            <p class="colorlabel"><strong>Sous Catégorie : </strong><span> {{ souscat.titre}}</span></p>
                            <p class="colorlabel"><strong>Nom Produit : </strong><span> {{ produit.libelle}}</span></p>
                        </div>
                        <div class="span3">
                            <p class="colorlabel"><strong>Stock : </strong><span> {{ produit.stock }}</span></p>
                            <p class="colorlabel"><strong>Prix : </strong><span> {{ produit.prix}}</span></p>
                            <p class="colorlabel"><strong>Remise : </strong><span> {{ produit.remise}}</span></p>
                        </div>
                        <div class="span7">
                            <hr>
                             <p class="colorlabel"><strong>Description : </strong> <span> {{ produit.description}}</span></p>
                        </div>
                    </div>
                
            </div>
         {% endblock content %}
   
{% endblock container %}