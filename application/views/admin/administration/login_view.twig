{% extends "/layout/admin-layout.twig" %}

{% block title %} {{parent()}} - login administrateur{% endblock title %}

{% block nav%}{% endblock nav%}
{% block content %}
    <div class="row-fluid">
        <div class="span6 well offset3">
                <form action="/admin/admin/verifylogin" method="POST" class="form-horizontal">
                    <fieldset>
                        <legend>Interface Administrateur</legend>
                        <div class="login">
                                {{ validation_errors() }}
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="Nom utilisateur">Nom utilisateur:</label> 
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-user"></i></span>
                                        <input type="text" class="input-xlarge" name="login" class="input-xlarge" placeholder="Votre Nom d'utilisateur"/>                       
                                    </div>
                                </div>
                            </div>

                            <div class="control-group">
                                <!-- Password-->
                                <label class="control-label" for="pwd">Mot de passe:</label>
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-lock"></i></span>
                                        <input type="password" id="pwd" name="pwd" class="input-xlarge" placeholder="Votre Mot de Passe"/>
                                    </div>
                                </div>
                            </div>
                         <div class="control-group">
                                <!-- Button -->
                                <div class="controls">
                                    <button class="btn btn-inverse">Se connecter</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
        </div>
    </div>
{% endblock content %}
