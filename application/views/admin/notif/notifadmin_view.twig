{% extends "/layout/admin-layout.twig" %}{% block title %} {{parent()}} - Espace Administrateur{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well" style="min-height: 585px">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h3>Espace Administrateur</h3></li>                </ul>                    <ul class="nav nav-pills" style="border-bottom: 1px solid #cccccc">                        <li class="pull-left"><h4>Notification</h4></li>                   </ul>                    <div>                         {%set nbactiv = 0 %}                    {%for var in req%}                        {%if var.notifpaiement != 0%}                        {%set nbactiv = nbactiv + 1 %}                        {%else%}                       <p>                            {%if var.vue == 1%}                            <div class="alert alert-success">                                <a href="/admin/admin/deleteNotif/{{var.idnotifAdmin}}}" class="close" data-dismiss="alert">&times;</a>                                                                                    <p>{{var.message}}  <strong>Vue</strong></p>                            </div>                                 {%else%}                    {%if var.type == 'commercant'%}                       <div class="alert">                              <!-- lien vers la page details pour enbbled or desabled le comm  en question -->                           <p>{{var.message}} <a href="/admin/admin/viewdetails/{{var.idclt}}/{{var.idnotifAdmin}}">commercant</a>                              </p>                       </div>                     {%else%}                       <div class="alert">                              <p>{{var.message}} <a href="/admin/admin/afficheClient/{{var.idcomm}}/{{var.idnotifAdmin}}">Client</a>                                                              </p>                       </div>                    {%endif%}                    {%endif%}                                     {%endif%}                           {%endfor%}                    <p>                    {%if nbactiv > 0%}                    <a href="/paiement/paiement/getnotifpay"><li>Notification pour activation</li></a>                                                               {%endif%}                                               </p>                    </div>                    <div>                         <ul class="nav nav-pills" style="border-bottom: 1px solid #cccccc">                        <li class="pull-left"><h4>Signal√©</h4></li>                   </ul>                    {%for var in sign%}                                              {%if var.vue == 1%}                        <div class="alert alert-success">                           <a href="/signaler/signaler/deleteSign/{{var.idsignaler}}}" class="close" data-dismiss="alert">&times;</a>                                                                                <p>{{var.titre}}  {{var.description}} <strong>Vue</strong></p>                             </div>                                                                  {%else%}                    {%if var.type == 'produit'%}                        <div class="alert">                              <!-- lien vers la page details pour enbbled or desabled le comm  en question -->                            <p>{{var.titre}}  <a href="/admin/admin/viewproduct/{{var.produit_idproduit}}/{{var.idsignaler}}">Produit</a>                                                                 </p>                        </div>                                 {%elseif var.type == 'avis' %}                        <div class="alert">                             <p>{{var.titre}}   <a href="/admin/admin/getAvis/{{var.commentaire_idcommentaire}}/{{var.idsignaler}}">Avis</a>                                     </p>                        </div>                                        {%elseif var.type == 'forum' %}                         <div class="alert">                             <p>{{var.titre}} <a href="/admin/admin/getMsgForum/{{var.Msgforum_idMsgforum}}/{{var.idsignaler}}">Forum</a>                                                                       </p>                        </div>                    {%endif%}</p>  {%endif%}                                                                                                                              {%endfor%}                                                                                </div>             </div>               </div>   </div>    {% endblock content %}