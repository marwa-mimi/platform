{% extends "/layout/admin-layout.twig" %}{% block title %} {{parent()}} - login administrateur{% endblock title %}{% block container %}    <div class="row">        {% block content %}            <div class="span12">            <div class="well">                {#---Logo---#}                <div class="span3 offset4">                    <a href=""><img src="{{base_url()}}assets/img/logo.png" alt="E-COMMERCE"/></a>                </div>                    <div>                        <p>affiche notif</p>                         {%set nbactiv = 0 %}                    {%for var in req%}                        {%if var.notifpaiement != 0%}                        {%set nbactiv = nbactiv + 1 %}                        {%else%}                       <p>                            <li>{{var.message}} </li>                            <li>type : {{var.type}} </li>                                                        {%if var.vue == 1%}                                <li>Vue</li>                                {%else%}                    {%if var.type == 'commercant'%}                    <!-- lien vers la page details pour enbbled or desabled le comm  en question -->                     <a href="/admin/admin/viewdetails/{{var.idclt}}/{{var.idnotifAdmin}}"><li>commercant</li></a>                                                                     {%else%}                    <a href="/admin/admin/afficheClient/{{var.idcomm}}/{{var.idnotifAdmin}}"><li>Client</li></a>                                                       {%endif%}                    {%endif%}                    </p>                     {%endif%}                                                                                {%endfor%}                                        <p>                    {%if nbactiv > 0%}                    <a href="/paiement/paiement/getnotifpay"><li>Notification pour activation</li></a>                                                                                    {%endif%}                                               </p>                                                            </div>                    <div>                        <h3>affiche signal</h3>                    {%for var in sign%}                       <p>                            <li>{{var.titre}} </li>                            <li>{{var.description}} </li>                            <li>{{var.dateenvoi}} </li>                        {%if var.vue == 1%}                                <li>Vue</li>                           {%else%}                    {%if var.type == 'produit'%}                    <!-- lien vers la page details pour enbbled or desabled le comm  en question -->                     <a href="/admin/admin/viewproduct/{{var.produit_idproduit}}/{{var.idsignaler}}"><li>Produit</li></a>                                                                     {%elseif var.type == 'avis' %}                    <a href="/admin/admin/getAvis/{{var.commentaire_idcommentaire}}/{{var.idsignaler}}"><li>Avis</li></a>                                                                           {%elseif var.type == 'forum' %}                 <a href="/admin/admin/getMsgForum/{{var.Msgforum_idMsgforum}}/{{var.idsignaler}}"><li>Forum</li></a>                                   {%endif%}</p>  {%endif%}                                                                                                                              {%endfor%}                                                                                </div>            </div>            </div>        {% endblock content %}    </div>{% endblock container %}