{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Notification{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h4>Liste des Notifications</h4></li>                </ul>                        {%if req == NULL %}                        <div class="alert alert-info">                                                        <p class="text-center"><strong>Pas de notification pour le moment</strong></p>                        </div>                                                {%else%}                     {%set nbactiv = 0 %}                    {%for var in req%}                     {%if var.notifpaiement != 0%}                        {%set nbactiv = nbactiv + 1 %}                        {%else%}                       <p>                           {%if var.vue == 1%}                            <div class="alert alert-success">                                   <a href="/notification/notif/deletecomm/{{var.idnotifCommercant}}" class="close" data-dismiss="alert">&times;</a>                                   <p>{{var.message}}  <strong>Vue</strong></p>                               </div>                            {%else%}                       <div class="alert">                           <p>{{var.message}} <a href="/forum/forum/afficherDetail/{{var.objNotif}}/{{var.idnotifCommercant}}">Voir sujet</a>                    </p>                  </div>                            {%endif%}                                         </p>                                                          {%endif%}                               {%endfor%}                                        {% endif%}                                                             <p>                    {%if nbactiv > 0%}             <a href="/paiement/paiement/getnotifpaycomm"><li>Notification pour paiement</li></a>                                                                                    {%endif%}                                               </p>                        </div>        </div>             </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}    {% endblock content %}