{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Profil{% endblock title %}

{% block content %}
    <div class="row-fluid">
        <div class="span12 well">
            <div class="row-fluid">
                   <ul class="nav nav-pills border">
                        <li class="pull-left"><h4>Modifier Votre Profil</h4></li>
                    </ul>
                <form action="/inscription/gestionprofil/updateprofilcomm" method="POST" class="">
                    <div class="span10 well offset1" style="background-color: rgb(250, 250, 250)">
                            <fieldset>
                                <legend>Informations Personnels</legend>
                                <div class="span6">
                                    <div class="control-group">
                                    <div class="login offset4">
                                        {{ form_error('callback') }}  
                                    </div>
                                 </div>
                                    {#---Nom---#}
                                    <div class="control-group">
                                        <label class="control-label" for="nom">Nom <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="nom" for="nom" placeholder="Votre Nom" class="input-large" value="{{ nom }}" required="required">
                                            <div class="error">
                                                {{ form_error('nom') }}         
                                                </div>
                                            </div>
                                        </div>

                                    {#---Prénom---#}
                                    <div class="control-group">
                                        <label class="control-label" for="prenom" >Prénom <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="prenom" placeholder="Votre Prénom" class="input-large" value="{{ prenom }}" required="required">
                                            <div class="error">
                                                {{ form_error('prenom') }}         
                                            </div>
                                        </div>
                                    </div>

                                    {#---Email---#}
                                    <div class="control-group">
                                        <label class="control-label" for="email">E-mail <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="email" name="email" placeholder="Votre E-mail" class="input-large" value="{{ email }}" required="required">
                                            <div class="error">
                                                  {{ form_error('email') }}         
                                             </div>
                                        </div>
                                    </div>

                                    {#---Login---#}
                                    <div class="control-group">
                                        <label class="control-label" for="login">Login <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="login" placeholder="Votre Nom d'utilisateur" class="input-large" value="{{ login }}" required="required">
                                            <div class="error">
                                                {{ form_error('login') }} 
                                            </div>
                                        </div>
                                   </div>
                                 </div>
                                <div class="span5">
                        
                                    {#---Adressse---#}
                                    <div class="control-group">
                                        <label class="control-label" for="adresse">Adresse <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="adresse" placeholder="Votre Adresse" class="input-large" value="{{ adresse }}" required="required">
                                            <div class="error">
                                                {{ form_error('adresse') }}         
                                            </div>
                                        </div>
                                   </div>

                                    {#---Pays---#}
                                    <div class="control-group">
                                        <label class="control-label" for="pays">Pays <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="pays" placeholder="Votre Adresse" class="input-large" value="{{ pays}}"  required="required">
                                            <div class="error">
                                                {{ form_error('pays') }}         
                                            </div>
                                        </div>
                                    </div>

                                    {#---ville---#}
                                    <div class="control-group">
                                        <label class="control-label" for="ville">Ville <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="ville" placeholder="Votre Adresse" class="input-large" value="{{ ville }}" required="required">
                                            <div class="error">
                                                {{ form_error('ville') }}         
                                            </div>
                                        </div>
                                    </div>

                                    {#---Télephone---#}
                                    <div class="control-group">
                                        <label class="control-label" for="tel">Numéro téléphone <span class="required">*</span></label>
                                        <div class="controls">
                                            <input type="text" name="tel" placeholder="Votre Numéro De Téléphone" class="input-large" value="{{ tel }}" required="required">
                                            <div class="error">
                                                {{ form_error('tel') }}         
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                 <legend>Informations sur Votre Société</legend>
                                 <div class="span6">  
                                {#---Societe---#}
                                <div class="control-group">
                                    <label class="control-label" for="societe">Société <span class="required">*</span></label>
                                    <div class="controls">
                                        <input type="text" name="societe" placeholder="Votre Adresse" class="input-large" value="{{ societe }}" required="required">
                                        <div class="error">
                                            {{ form_error('societe') }}         
                                        </div>
                                    </div>
                                </div>
                                {#---Adresse Société---#}
                                <div class="control-group">
                                    <label class="control-label" for="adrsoc">Adresse Société <span class="required">*</span></label>
                                    <div class="controls">
                                        <input type="text" name="adrsoc" placeholder="Adresse de la societe" class="input-large" value="{{ adrsoc }}" required="required">
                                        <div class="error">
                                             {{ form_error('adrsoc') }}         
                                        </div>
                                     </div>
                                </div>
                                
                                {#---Site web---#}
                                <div class="control-group">
                                    <label class="control-label" for="siteweb">Site Web <span class="required">*</span></label>
                                    <div class="controls">
                                        <input type="text" name="siteweb" placeholder="site web" class="input-large" value="{{ siteweb }}" required="required">
                                        <div class="error">
                                            {{ form_error('siteweb') }}         
                                        </div>
                                    </div>
                                </div>
                                     </div>
                                 <div class="span5">
                                {#---Télephone professionnel---#}
                                <div class="control-group">
                                    <label class="control-label" for="telpro">Numéro téléphone société<span class="required">*</span></label>
                                    <div class="controls">
                                        <input type="text" name="telpro" placeholder=" Numéro De Téléphone Professionnel" class="input-large" value="{{ telpro }}" required="required">
                                        <div class="error">
                                            {{ form_error('telpro') }}         
                                        </div>
                                    </div>
                                </div>
                                {#---Fax---#}
                                <div class="control-group">
                                    <label class="control-label" for="fax"> Fax société<span class="required">*</span></label>
                                    <div class="controls">
                                        <input type="text" name="fax" placeholder=" Fax" class="input-large" value="{{ fax }}" required="required">
                                        <div class="error">
                                             {{ form_error('fax') }}         
                                        </div>
                                    </div>
                                </div>
                                {#---Description Société---#}
                                <div class="control-group">
                                    <label class="control-label" for="descsoc">Description Société <span class="required">*</span></label>
                                    <div class="controls">
                                        <textarea name="descsoc" placeholder="Description de la societe" class="input-large" required="required">{{ descsoc }}</textarea>
                                        <div class="error">
                                            {{ form_error('descsoc') }}         
                                        </div>
                                    </div>
                                </div>
                                </div>
                             </fieldset>
                        </div>
                        
                        {#---S'enregistrer---#}
                        <div class="control-group span11">
                            <div class="controls offset8">
                                <button type="submit" name="submit" class="btn btn-inverse">S'enregistrer</button>
                                <button type="reset" name="annuler" class="btn btn-inverse">Annuler</button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
         
    </div>
    {% block partenaires %} {{parent()}} {% endblock partenaires %}
    {% endblock content %}
