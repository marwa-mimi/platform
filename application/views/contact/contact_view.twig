{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - login{% endblock title %}

{% block container %}
    <div class="row">
        {% block menuVertical%}{% endblock menuVertical%}
        {% block content %}
        <div class="span12">
            <div class="well">
                <form action="/contact/contact/send" method="POST" class="form-horizontal">
                    <fieldset>
                        <legend>Contactez nous</legend>
                            
                            <div class="control-group offset2">
                                <label class="control-label" for="Nom">Nom :</label> 
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-user"></i></span>
                                        <input type="text" class="input-xlarge" name="nom" class="input-xlarge" placeholder="Votre Nom " />                       
                                    
                                    </div>
                                         <div class="error">
                                        {{ form_error('nom') }}         
                                    </div>
                                </div>
                            </div>

                                <!-- email-->
                                <label class="control-label" for="Email">Email:</label>
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-lock"></i></span>
                                        <input type="email"  name="email" class="input-xlarge" placeholder="Votre Email" />
                                   
                                    </div>
                                         <div class="error">
                                        {{ form_error('email') }}         
                                    </div>
                                </div>
                       
                           
                       
                                <!-- Sujet-->
                                <label class="control-label" for="sujet">Sujet:</label>
                                <div class="controls">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-lock"></i></span>
                                        <input type="text"  name="sujet" class="input-xlarge" placeholder="Sujet" />
                                    
                                    </div>
                                         <div class="error">
                                        {{ form_error('sujet') }}         
                                    </div>
                                </div>
                           
                         {#---Message---#}
                            <div class="control-group">
                                <label class="control-label" for="message" >Message <span class="required">*</span></label>
                                <div class="controls">
                                    <textarea  name="message" placeholder="Message" class="input-xlarge" ></textarea>
                                    <div class="error">
                                        {{ form_error('message') }}         
                                    </div>
                                </div>
                            </div> 
                            <div class="control-group offset2">
                                <!-- Button -->
                                <div class="controls">
                                    <button class="btn btn-info">Envoyer</button>
                                    
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        {% endblock content %}
        </div>
        {% block partenaires %} {{parent()}} {% endblock partenaires %}
{% endblock container %}
