{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Contact{% endblock title %}

{% block content %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12 well" style="min-height:302px">
                <ul class="nav nav-pills border">
                    <li class="pull-left"><h4>Contactez nous</h4></li>

                </ul>
                <form action="/contact/contact/send" method="POST" class="well span10 offset1">
                    <div class="row-fluid">
                        <div class="span5">
                            <div class="row-fluid">
                                <label for="Nom">Nom <span class="required">*</span>
                                <input type="text" class="input-xlarge"  name="nom"  placeholder="Votre Nom" >

                                <div class="error">
                                   {{ form_error('nom') }}         
                                </div>
                                <label for="email">Email <span class="required">*</span></label>
                                <input type="email"  name="email" class="input-xlarge" placeholder="Votre Email" />
                                <div class="error">
                                   {{ form_error('email') }}         
                                </div>
                                <label for="Sujet">Sujet <span class="required">*</span></label>
                                <input type="text" name="sujet" class="input-xlarge" placeholder="Sujet" />
                                <div class="error">
                                   {{ form_error('sujet') }}         
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            <div class="row-fluid">
                                <label>Message</label>
                                <textarea name="message" name="message" class="input-xlarge" rows="8"></textarea>
                                <div class="error">
                                   {{ form_error('message') }}         
                                </div>
                                <button type="submit" class="btn btn-inverse pull-right">Envoyer</button>
                            </div>
                        </div>
                    </div>  
                </form>
                 </div>
           
            </div>
        </div>   
    </div>
    {% block partenaires %} {{parent()}} {% endblock partenaires %}
    {% endblock content %}
