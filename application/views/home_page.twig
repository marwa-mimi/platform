	    next: '#next2',
            scroll: 2,
            items: {
                    width: 228,
            //	height: '30%',	//	optionally resize item-height
                    visible: {
                            min: 2,
                            max: 4
                    }
            }
    });
        
});
   </script>

 {% endblock js %} 
