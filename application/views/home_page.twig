{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Home{% endblock title %}
{% block head %}
    <link href="{{base_url()}}assets/css/slider.css" rel="stylesheet" type="text/css" />
    <link href="{{base_url()}}assets/css/jquery.bxslider.css" rel="stylesheet" type="text/css" />

{% endblock head %}


{% block container %}
             <div class="slider-shadow">
                    <div id="myCarousel4" class="carousel slide">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel4" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel4" data-slide-to="1"></li>
                            <li data-target="#myCarousel4" data-slide-to="2"></li>
                        </ol>
                        <!-- Carousel items -->
                        <div class="carousel-inner" style="height: 320px; margin-top: 31px;">
                            <div class="active item"><img src="{{base_url()}}assets/img/slide1.jpg" alt=""/></div>
                            <div class="item"><img src="{{base_url()}}assets/img/slide2.jpg" alt=""/></div>
                            <div class="item"><img src="{{base_url()}}assets/img/slide3.jpg" alt=""/></div>
                            <div class="item"><img src="{{base_url()}}assets/img/slide4.jpg" alt=""/></div>
                        </div>
                        <!-- Carousel nav -->
                        <a class="carousel-control left" href="#myCarousel4" data-slide="prev">&lsaquo;</a>
                        <a class="carousel-control right" href="#myCarousel4" data-slide="next">&rsaquo;</a>
                    </div>
                </div>

        {% block menuVertical%}{% endblock menuVertical%}
        {% block content %}
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    {# meilleur noter#}
                    <h4 class="title feature">
                        <span class="pull-left">Meilleur Noter</span>
                        <span class="pull-right">
                            <a id="prev3" class="iconleft"></a>
                            <a id="next3" class="iconright"></a>
                        </span>
                    </h4>
                        <ul id="foo" class="thumbnails" style="margin-left:-18px">
                    {% for row in produit.result_array() %}
                        <li>
                            <div class="thumbnail">
                                <img alt="{{row.libelle}}" style="height: 194px;" src="{{pathphoto}}{{row.photo}}"/>
                                <div class="caption">
                                    <form action="/cart/cart/add_cart_item" method="POST" style="margin-bottom: 0">
                                        {% set id = row.commercant_idcommercant %}
                                            <h5 class="text-center">{{row.libelle}}</h5>
                                        {% for row2 in comm.result_array() %}
                                            {% if row2.idcommercant == id  %}
                                            <p class="text-center" > <a href="/produit/afficheproduit/view_prod_comm/{{row2.idcommercant}}"> {{row2.societe}}</a></p>  
                                            {% endif %}
                                        {% endfor %}
                                        <p class="text-center" >
                                        {% for i in 1..row.note %}
                                            <img src="{{base_url()}}/assets/img/star-on.png">
                                        {% endfor %}
                                        </p>
                                        <div class="tumbprod">


                                        {#---Quantité hidden---#}
                                        <input type="hidden" name="quantity" value="1">

                                        {#---hidden id---#}
                                        <input type="hidden" name="product_id" value="{{row.idproduit}}">

                                        <button type="submit"  class="btn btn-mini" name="submit" title="Ajouter au panier"><i class="icon-shopping-cart"></i></button>
                                        <a href="/produit/afficheproduit/details/{{row.idproduit}}" class="btn btn-mini" title="Plus Détails"><i class="icon-plus"></i></a></span>
                                        <span class="pull-right label">{{row.prix}} DT</span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="shadow"></div>
                        </li>
                    {% endfor %}
                    </ul>
                    
                   {# Last added#}
                   <h4 class="title feature">
                        <span class="pull-left">Nouveau produits</span>
                        <span class="pull-right">
                            <a id="prev2" class="iconleft"></a>
                            <a id="next2" class="iconright"></a>
                        </span>
                    </h4>
                        <ul id="last" class="thumbnails" style="margin-left:-18px">
                     {% for rows in produitdate.result_array() %}
                        <li>
                            <div class="thumbnail">
                                <img alt="{{rows.libelle}}" style="height: 194px;" src="{{pathphoto}}{{rows.photo}}"/>
                                <div class="caption">
                                    <form action="/cart/cart/add_cart_item" method="POST" style="margin-bottom: 0">
                                        {% set id = rows.commercant_idcommercant %}
                                            <h5 class="text-center">{{rows.libelle}}</h5>
                                        {% for row2 in comm.result_array() %}
                                            {% if row2.idcommercant == id  %}
                                            <p class="text-center" > <a href="/produit/afficheproduit/view_prod_comm/{{row2.idcommercant}}"> {{row2.societe}}</a></p>  
                                            {% endif %}
                                        {% endfor %}
                                        <p class="text-center">
                                        {% for i in 1..rows.note %}
                                            <img src="{{base_url()}}/assets/img/star-on.png">
                                        {% endfor %}
                                        </p>
                                        <div class="tumbprod">
                                        {#---Quantité hidden---#}
                                        <input type="hidden" name="quantity" value="1">

                                        {#---hidden id---#}
                                        <input type="hidden" name="product_id" value="{{row.idproduit}}">

                                        <button type="submit"  class="btn btn-mini" name="submit" title="Ajouter au panier"><i class="icon-shopping-cart"></i></button>
                                        <a href="/produit/afficheproduit/details/{{rows.idproduit}}" class="btn btn-mini" title="Plus Détails"><i class="icon-plus"></i></a></span>
                                        <span class="pull-right label">{{rows.prix}} DT</span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="shadow"></div>
                        </li>
                    {% endfor %}
                    </ul>
               </div>
           </div>
   
           </div>
  {% block partenaires %} {{parent()}} {% endblock partenaires %}
        {% endblock content %}


{% endblock container %}

{% block js %} 
{#---Menu Vertical---#}
         
<script type="text/javascript" src="{{base_url()}}assets/js/modernizr.custom.js"></script>
<script type="text/javascript" src="{{base_url()}}assets/js/jquery.cslider.js"></script>
       <script type="text/javascript" src="{{base_url()}}assets/js/jquery.bxslider.js"></script>
        
        <script type="text/javascript">
            $(function() {
                $('#da-slider').cslider({
