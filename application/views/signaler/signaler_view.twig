{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Modifier Profil{% endblock title %}{% block head %}<link type="text/css" href="{{base_url()}}assets/css/fg.menu.css" media="screen" rel="stylesheet" />{% endblock head %}{% block container %}<div class="row">        {% block menuVertical%}{% endblock menuVertical%}        {% block content %}            <div class="span12">            <div class="well">                                   <div>                        <p>Signaler</p>                        <form action="/signaler/signaler/saveSign/{{idsign}}/{{type}}/{{idp}}" method="POST">                          {#---titre---#}                        <div class="control-group">                            <label class="control-label" for="titre">Titre <span class="required">*</span></label>                            <div class="controls">                                <input type="text" name="titre" placeholder="titre" class="input-xlarge" >                                <div class="error">                                    {{ form_error('titre') }}                                         </div>                            </div>                        </div>                          {#---Description---#}                        <div class="control-group">                            <label class="control-label" for="description">Description <span class="required">*</span></label>                            <div class="controls">                                <input type="text" name="description" placeholder="description" class="input-xlarge" >                                <div class="error">                                    {{ form_error('description') }}                                         </div>                            </div>                        </div>                                                        {#---Valider---#}                            <div class="control-group">                                <div class="controls">                                    <input type="submit" value="Valider" class="btn btn-info">                                    <input type="reset" value="Annuler" class="btn btn-info">                                </div>                            </div>                                                                                                </form>                                                                                </div>            </div>            </div>        {% endblock content %}        </div>        {% block partenaires %} {{parent()}} {% endblock partenaires %}{% endblock container %}