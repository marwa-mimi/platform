{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Signaler{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h4>Signaler</h4></li>                </ul>                    <form action="/signaler/signaler/saveSign/{{idsign}}/{{type}}/{{idp}}" method="POST" class="form-horizontal offset2">                          {#---titre---#}                        <div class="control-group">                            <label class="control-label" for="titre">Titre <span class="required">*</span></label>                            <div class="controls">                                <input type="text" name="titre" placeholder="titre" class="input-xlarge" >                                <div class="error">                                    {{ form_error('titre') }}                                         </div>                            </div>                        </div>                          {#---Description---#}                        <div class="control-group">                            <label class="control-label" for="description">Description <span class="required">*</span></label>                            <div class="controls">                                <textarea name="description" placeholder="Description" class="input-xlarge"></textarea>                                <div class="error">                                    {{ form_error('description') }}                                         </div>                            </div>                        </div>                                                        {#---Valider---#}                            <div class="control-group">                                <div class="controls">                                    <input type="submit" value="Valider" class="btn btn-inverse">                                    <input type="reset" value="Annuler" class="btn btn-inverse">                                </div>                            </div>                        </form>                    </div>        </div>             </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}    {% endblock content %}