{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Détails produit{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well">            <div class="row-fluid">                   <ul class="nav nav-pills border">                        <li class="pull-left"><h4>Détails Produit</h4></li>                        <li class="dropdown pull-right">                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gestion Commerçant<b class="caret"></b></a>                        <ul class="dropdown-menu">                            <li><a href="/produit/produit">Gestion des produits</a></li>                            <li><a href="/annonce/annonce">Gestion des annonces</a</li>                            <li><a href="/produit/produit/slider">Gestion Slider</a></li>                        </ul>                    </li>                    <li class="pull-right"><a href="/statistique/Statistique/statcomm">Statistique</a></li>                     {%if (commercant.paiement == 0) and (commercant.dempaiement == 0) %}                    <li class="pull-right"><a href="/paiement/paiement/DemActivePay/{{getsessionhelper()['id']}}">Demande activation de paiement</a></li>                     {%elseif commercant.paiement == 0 %}                    <li class="pull-right"><a href="" class="text-error">Demande d'activation en cour de traitement</a></li>                     {%else %}                        <li class="pull-right"><a href="#">Gestion Paiement</a></li>                     {%endif%}                     </ul>                                           <div class="span3">                       <img src="{{ finalpath }}" alt="" height="159" class="img-polaroid">                    </div>                                         <div class="span8">                        <div class="span6">                            <p class="colorlabel"><strong>Catégorie : </strong> <span>{{ categorie.titre}}</span> </p>                            <p class="colorlabel"><strong>Sous Catégorie : </strong><span> {{ souscat.titre}}</span></p>                            <p class="colorlabel"><strong>Sous Sous Catégorie : </strong><span> {{ soussouscat.titre}}</span></p>                            <p class="colorlabel"><strong>Nom Produit : </strong><span> {{ produit.libelle}}</span></p>                        </div>                        <div class="span3">                            <p class="colorlabel"><strong>Stock : </strong><span> {{ produit.stock }}</span></p>                            <p class="colorlabel"><strong>Prix : </strong><span> {{ produit.prix}}</span></p>                            <p class="colorlabel"><strong>Remise : </strong><span> {{ produit.remise}}</span></p>                        </div>                       </div>                        <div class="span11">                            <hr>                             <p class="colorlabel"><strong>Description : </strong> <span> {{ produit.description}}</span></p>                        </div>                    </div>                 </div>           </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}    {% endblock content %}