{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Détail Produit{% endblock title %}{% block container %}    <div class="row">        {% block menuVertical%}{% endblock menuVertical%}        {% block content %}        <div class="span12">            <div class="well">                   <ul class="nav nav-pills" style="border-bottom: 1px solid #cccccc">                        <li class="pull-left"><h4>Détails d'un produit</h4></li>                        <li class="pull-right"><a href="/annonce/annonce">Gestion des annonces</a></li>                        <li class="pull-right"><a href="/produit/produit">Gestion des produits</a></li>                     </ul>                                           <div class="span2">                       <img src="{{ finalpath }}" alt="" height="159" class="img-polaroid span3">                    </div>                                         <div class="span6">                        <div class="span3">                            <p class="colorlabel"><strong>Catégorie : </strong> <span>{{ categorie.titre}}</span> </p>                            <p class="colorlabel"><strong>Sous Catégorie : </strong><span> {{ souscat.titre}}</span></p>                            <p class="colorlabel"><strong>Sous Sous Catégorie : </strong><span> {{ soussouscat.titre}}</span></p>                            <p class="colorlabel"><strong>Nom Produit : </strong><span> {{ produit.libelle}}</span></p>                        </div>                        <div class="span2">                            <p class="colorlabel"><strong>Stock : </strong><span> {{ produit.stock }}</span></p>                            <p class="colorlabel"><strong>Prix : </strong><span> {{ produit.prix}}</span></p>                            <p class="colorlabel"><strong>Remise : </strong><span> {{ produit.remise}}</span></p>                        </div>                        <div class="span6">                            <hr>                             <p class="colorlabel"><strong>Description : </strong> <span> {{ produit.description}}</span></p>                        </div>                    </div>            </div>       </div>           {% endblock content %}    </div>        {% block partenaires %} {{parent()}} {% endblock partenaires %}{% endblock container %}