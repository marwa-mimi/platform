{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Détails d'un produit{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h4>Détails d'un produit</h4></li>                    <li id="etoilrate"></li>                    {% if getsessionhelper()['type'] == 'client'%}                    <li class="pull-right"><a href="/message/msgclientcomm/send/{{produit.commercant_idcommercant}}/{{produit.idproduit}}" class="btn"><i class="icon-envelope"></i> Envoyer message</a></li>                    <li class="pull-right"><a href="/produit/afficheproduit/publierfb/{{idp}}" class="btn"><i class="icon-envelope"></i> Partager</a></li>                    {%endif%}                     {% set type = 'produit'%}            <li class="pull-right"><a href="/signaler/signaler/addSign/{{produit.idproduit}}/{{type}}"> Signaler produit</a></li>                        </ul>                <div class="span3">                    <div class="row">                        <img src="{{ finalpath }}" alt="" height="159" class="img-polaroid span3">                    </div>                </div>                 <div class="span7">                    <div class="span7">                        <p id="default-demo" data-idp="{{produit.idproduit}}"></p>                    </div>                    <div class="span3">                        <p class="colorlabel"><strong>Nom produit : </strong> <span>{{ produit.libelle }}</span> </p>                        <p class="colorlabel"><strong>Stock : </strong><span> {{ produit.stock }}</span></p>                     </div>                    <div class="span3">                        <p class="colorlabel"><strong>Prix : </strong><span> {{ produit.prix}}</span></p>                        <p class="colorlabel"><strong>Remise : </strong><span> {{ produit.remise}}</span></p>                    </div>                    <div class="span7">                        <hr>                        <p class="colorlabel"><strong>Description : </strong> <span> {{ produit.description}}</span></p>                    </div>                </div>                                <div class="span11">                    <h4 class="colorlabel">Avis des internautes</h4>                    <hr>                </div>                {% for row in avis %}                    <div class="span11 well">                    <p>{{row.contenu}}</p>                     <p>                        <i class="icon-user"></i> De <span class="colorlabel">{{row.client_idclient}}</span>                         | <i class="icon-calendar"></i> {{row.datepublication}}                         {% set type = 'avis'%}            <li class="pull-right"><a href="/signaler/signaler/addSign/{{row.idcommentaire}}/{{type}}/{{idp}}"> Signaler avis</a></li>                              </p>                </div>                {%endfor %}                                                {%if getsessionhelper()['type'] == 'client'%}                <form action="/produit/afficheproduit/ajouterAvis/{{idp}}/{{idclt}}" method="post" class="span11">                                             <div class="control-group">                            <label class="control-label colorlabel" for="contenu"><strong>Ajouter Votre Avis</strong></label>                           <div class="controls">                               <textarea name="contenu" placeholder="Ajouter un commentaire" class="span11" rows="5"></textarea>                               <div class="error">                                   {{ form_error('contenu') }}                                        </div>                           </div>                         </div>                        <div class="control-group">                          <div class="controls">                              <input type="submit" name="ajouter" value="Ajouter" class="btn btn-info"/>                          </div>                        </div>                </form>                 {%endif%}       </div>        </div>    </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}       {% endblock content %}