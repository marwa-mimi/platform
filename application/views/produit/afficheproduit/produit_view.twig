{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Détails d'un produit{% endblock title %}{%block head%}     <link rel="stylesheet" href="{{base_url()}}assets/css/jqzoom.css" type="text/css" media="screen" />{%endblock head%}{% block content %}    <div class="row-fluid">        <div class="span12">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h4>Détails d'un produit</h4></li>                    <li id="etoilrate"></li>                    {% if getsessionhelper()['type'] == 'client'%}                    <li class="pull-right"><a href="/message/msgclientcomm/send/{{produit.commercant_idcommercant}}/{{produit.idproduit}}" class=""><i class="icon-envelope"></i> Envoyer message</a></li>                    <li class="pull-right"> {% set type = 'produit'%}                        <a href="/signaler/signaler/addSign/{{produit.idproduit}}/{{type}}" class=""> Signaler produit</a>                      </li>                    {%endif%}                    <li class="pull-right">                                              </li>                                         </ul>                <div class="span2">                    <div class="row">                        <span class="tozoom">                            <img src="{{ finalpath }}" class="jqzoom img-polaroid"  alt="{{ finalpath }}">                        </span>                    </div>                </div>                 <div class="span9">                    <div class="span12">                        <span id="default-demo" data-idp="{{produit.idproduit}}" style="margin-left: 16px;"></span>                                      </div>                    <div class="span5">                        <p class="colorlabel"><strong>Nom produit : </strong> <span>{{ produit.libelle }}</span> </p>                        <p class="colorlabel"><strong>Stock : </strong><span> {{ produit.stock }}</span></p>                     </div>                    <div class="span5">                        <p class="colorlabel"><strong>Prix : </strong><span> {{ produit.prix}}</span></p>                        <p class="colorlabel"><strong>Remise : </strong><span> {{ produit.remise}}</span></p>                    </div>                    <div class="span12">                        <hr>                        <p class="colorlabel"><strong>Description : </strong> <span> {{ produit.description}}</span></p>                         {% if getsessionhelper()['type'] == 'client'%}                        <span class="pull-left">                            <a href="/produit/afficheproduit/publierfb/{{idp}}" class="btn btn-mini btn-primary"><img src="{{base_url()}}/assets/img/fb.png"/>Partager</a>                        </span>                        {%endif%}                                                <form action="/cart/cart/add_cart_item" method="POST">                         {% set id = produit.commercant_idcommercant %}                            {% set actvpay = 0 %}                                {% for row2 in comm.result_array() %}                                    {% if row2.idcommercant == id  %}                                    {# vérifier si le paiement en ligne est active     #}                                        {%if row2.paiement == 1 %}                                            {% set actvpay = 1 %}                                        {%else%}                                            {% set actvpay = 0 %}                                        {%endif%}                                    {% endif %}                                {% endfor %}                                {#---Quantité hidden---#}                                <input type="hidden" name="quantity" value="1">                                {#---hidden id---#}                                <input type="hidden" name="product_id" value="{{produit.idproduit}}">                                {%if actvpay == 1%}                                <button type="submit"  class="btn btn-mini" name="submit" title="Ajouter au panier" style="margin-left: 10px"><i class="icon-shopping-cart"></i> Ajouter au panier</button>                                {%endif%}                                                             </form>                                              </div>                </div>                    <div class="span11"><hr></div>                <div class="span11">                    <h4 class="colorlabel">Avis des internautes</h4>                    <hr>                </div>                {% for row in avis %}                    <div class="span11 well">                    <p>{{row.contenu}}                         <span class="pull-right">                        <a href="/signaler/signaler/addSign/{{row.idcommentaire}}/{{type}}/{{idp}}" class="btn btn-mini"> Signaler avis</a>                     {%if idclt == row.idclient%}                    <a href="/produit/afficheproduit/supprimerAvis/{{row.idcommentaire}}/{{idp}}" class="btn btn-mini" title="Supprimer avis"><i class="icon-trash"></i></a>                    {%endif%}                    </span>                            </p>                    <p>                        <i class="icon-user"></i> De <span class="colorlabel">{{row.client_idclient}}</span>                         | <i class="icon-calendar"></i> {{row.datepublication}}                         {% set type = 'avis'%}                            </p>                                   </div>                {%endfor %}                                                {%if getsessionhelper()['type'] == 'client'%}                <form action="/produit/afficheproduit/ajouterAvis/{{idp}}/{{idclt}}" method="post" class="span11">                                             <div class="control-group">                            <label class="control-label colorlabel" for="contenu"><strong>Ajouter Votre Avis</strong></label>                           <div class="controls">                               <textarea name="contenu" placeholder="Ajouter un commentaire" class="span11" rows="5"></textarea>                               <div class="error">                                   {{ form_error('contenu') }}                                        </div>                           </div>                         </div>                        <div class="control-group">                          <div class="controls">                              <input type="submit" name="ajouter" value="Ajouter" class="btn btn-info"/>                          </div>                        </div>                </form>                 {%endif%}       </div>        </div>    </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}       {% endblock content %}{% block js %}     <script type="text/javascript" src="{{base_url()}}assets/js/jquery.raty.js"></script>    <script type="text/javascript" src="{{base_url()}}assets/js/rate.js"></script>    <script type="text/javascript">    $(function() {        $.fn.raty.defaults.path = '{{base_url()}}assets/img';        $('#default-demo').raty();      });        </script>             <script type="text/javascript" src="{{base_url()}}assets/js/jquery.jqzoom.js"></script><script type="text/javascript">jQuery(document).ready(function(){$("img.jqzoom").jqueryzoom({				xzoom: 500, //zooming div default width(default width value is 200)				yzoom: 200, //zooming div default width(default height value is 200)				offset: 10 //zooming div default offset(default offset value is 10)				//position: "right" //zooming div position(default position value is "right")			});});</script> {% endblock js %} 