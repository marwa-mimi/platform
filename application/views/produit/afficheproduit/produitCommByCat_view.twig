{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Inscription{% endblock title %}

{% block head %}
<link type="text/css" href="{{base_url()}}assets/css/fg.menu.css" media="screen" rel="stylesheet" />
<script language="javascript">
<!--
function mySubmit() {
document.formName.submit();
}
// -->
</script>
{% endblock head %}


{% block container %}
    <div class="row">
        {% block menuVertical%}{{parent()}}{% endblock menuVertical%}
        {% block content %}
            <div class="span9">
                <div class="slider-shadow">
                    <div id="myCarousel4" class="carousel slide">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel4" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel4" data-slide-to="1"></li>
                            <li data-target="#myCarousel4" data-slide-to="2"></li>
                        </ol>
                        <!-- Carousel items -->
                        <div class="carousel-inner" style="height: 320px; margin-top: 31px;">
                            <div class="active item"><img src="{{base_url()}}assets/img/slide1.jpg" alt=""/></div>
                            <div class="item"><img src="{{base_url()}}assets/img/slide2.jpg" alt=""/></div>
                            <div class="item"><img src="{{base_url()}}assets/img/slide3.jpg" alt=""/></div>
                            <div class="item"><img src="{{base_url()}}assets/img/slide4.jpg" alt=""/></div>
                        </div>
                        <!-- Carousel nav -->
                        <a class="carousel-control left" href="#myCarousel4" data-slide="prev">&lsaquo;</a>
                        <a class="carousel-control right" href="#myCarousel4" data-slide="next">&rsaquo;</a>
                    </div>
                </div>
            </div>
        {% endblock content %}
        <div class="span12 well">
            {# liste des produit #}
            <h4 class="title feature">
                <span class="pull-left">Liste des Produits</span>
            </h4>
                 <h4>Les categorie et sous cat du comm</h4>
                <ul class="thumbnails">
                
                {%for row in categorie%}
                    <a href="/produit/afficheproduit/getProductByCat/{{idcom}}/{{row.idcat}}"> Categorie : {{row.cat}}  </a></br>
                    {%set idc = row.idcat%}
                    {%for row2 in souscategorie%}
                    {%if row2.idforeigncat == row.idcat%}
                    <a href="/produit/afficheproduit/getProductBySousCat/{{idcom}}/{{row2.idsouscat}}">Sous cat : {{row2.souscat}}</a></br>
                    {%endif%}
                    
                    {%endfor%}
                    
                 {%endfor%}
                
                
                </ul>  
                
            <ul class="thumbnails">
                        {% for row in produit.result_array() %}
                        <li class="span3 more bottom"> 
                            <form action="/cart/cart/add_cart_item" method="POST" style="margin: 0 0 0px;">
                                {% set id = row.commercant_idcommercant %}
                                <div class="thumbnail">
                                        <img src="{{pathphoto}}{{row.photo}}" width="250" height="200" style="padding: 9px;">
                                        <div class="thumb">
                                            <p><small> {{row.libelle}}</small></p>
                                            
                                            {% for row2 in comm.result_array() %}
                                                {% if row2.idcommercant == id  %}
                                                    <p> Fournisseur : {{row2.societe}}</p>  
                                                {% endif %}
                                            {% endfor %}
                                            <div>
                                                <p class="pull-left">
                                                 {% for i in 1..row.note %}
                                                        <img src="{{base_url()}}/assets/img/star-on.png">
                                                {% endfor %}
                                                </p>
                                                <p class="pull-right"><big>{{row.prix}} DT</big></p>
                                            </div>
                                            {#---Quantité hidden---#}
                                             <input type="hidden" name="quantity" value="1">

                                            {#---hidden id---#}
                                            <input type="hidden" name="product_id" value="{{row.idproduit}}">
                                            <div class="pull-right">
                                                <button type="submit" name="submit" class="btn btn-default btn-mini"><i class="icon-shopping-cart"></i>Ajouter au panier</button>
                                                <a href="/produit/afficheproduit/details/{{row.idproduit}}" class="btn btn-default btn-mini"><i class="icon-plus"></i>Plus Détails</a>
                                            </div>
                                        </div>
                                    </div>
                            </form>
                        </li>
                        {% endfor %}
                    </ul>
                
            {# liste des offres #}
            <h4 class="title feature">
                <span class="pull-left">Liste des Offres</span>
            </h4>
            <ul class="thumbnails">
                    {% for row in annonce.result_array() %}
                        {% set id = row.commercant_idcommercant %}
                        <li class="span3 more bottom">
                            <div class="thumbnail">
                                <img src="{{pathphoto}}{{row.photo}}" width="250" height="200" style="padding: 9px;">
                                 <div class="thumb">
                                     <p><small> {{row.titre}}</small></p>
                                    {% for row2 in comm.result_array() %}
                                        {% if row2.idcommercant == id  %}
                                            <p> Fournisseur : {{row2.societe}}</p>          
                                        {% endif %}
                                    {% endfor %}
                                     <p>
                                        <a href="/produit/afficheproduit/detailsannonce/{{row.idannonce}}" class="btn btn-default btn-mini"><i class="icon-plus"></i>Plus Détails</a>
                                     </p> 
                                 </div>
                            </div>
                          </li>
                    {% endfor %}
                </ul>
        </div>
    </div>
     {% block partenaires %} {{parent()}} {% endblock partenaires %}
{% endblock container %}

{% block js %} 
{#---Menu Vertical---#}
            <script type="text/javascript" src="{{base_url()}}assets/js/fg.menu.js"></script>
            <script type="text/javascript">
                $(function() {
                    $('.fg-button').hover(
                            function() {
                                $(this).removeClass('ui-state-default').addClass('ui-state-focus');
                            },
                            function() {
                                $(this).removeClass('ui-state-focus').addClass('ui-state-default');
                            }
                    );
                    $('#hierarchybreadcrumb').menu({content: $('#hierarchybreadcrumb').next().html(), backLink: false});
                });
                </script>
 {% endblock js %} 