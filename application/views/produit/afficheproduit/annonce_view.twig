{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Détails d'un produit{% endblock title %}

{% block content %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                 <ul class="nav nav-pills border">
                    <li class="pull-left"><h4>Détails annonces</h4></li>
                    </ul>

                <div class="span3">
                    <div class="row">
                        <img src="{{ finalpath }}" alt="" height="159" class="img-polaroid span8">
                    </div>
                </div> 
               
                <div class="span3">
                    <p class="colorlabel"><strong>Annonce : </strong> <span>{{ annonce.titre}}</span> </p>
               </div>
               <div class="span7">
                    <hr>
                     <p class="colorlabel"><strong>Description : </strong> <span> {{ annonce.contenu }}</span></p>
                </div>
                </div>
        </div>
    </div>
    {% block partenaires %} {{parent()}} {% endblock partenaires %}
       {% endblock content %}
