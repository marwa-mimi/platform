{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Edit produit{% endblock title %}

{% block container %}
    <div class="row">
        {% block menuVertical%}{% endblock menuVertical%}
        {% block content %}
        <div class="span12">
            <div class="well">
                 <div class="span11">
                    <div class="row">
                        <ul class="nav nav-pills" style="border-bottom: 1px solid #cccccc">
                            <li class="pull-left"><h4>Ajouter un produit</h4></li>
                            <li class="pull-right"><a href="/annonce/annonce">Gestion des annonces</a></li>
                            <li class="pull-right"><a href="/produit/produit">Gestion des produits</a></li> 
                        </ul>
                     </div>
                </div>
                
                    <form action="/produit/produit/Insertslider" method="POST" class="form-horizontal offset2" enctype="multipart/form-data">
                    <fieldset>
           
                              {#---Photo---#}
                            <div class="control-group">
                                <label class="control-label" for="userfile" >Photo <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="file" name="userfile" size="20" />
                                  
                                </div>
                            </div>
                        
                            {#---Valider---#}
                            <div class="control-group">
                                <div class="controls">
                                    <input type="submit" value="Valider" class="btn btn-info">
                                    <input type="reset" value="Annuler" class="btn btn-info">
                                </div>
                            </div>
                    </fieldset>
                </form>
            </div>
        </div>
        {% endblock content %}
     </div>
     {% block partenaires %} {{parent()}} {% endblock partenaires %}
{% endblock container %}
{% block js %} 
    {#---js cat√©gorie---#}
    <script type="text/javascript" src="{{base_url()}}assets/js/categorie.js"></script>
 {% endblock js %} 
