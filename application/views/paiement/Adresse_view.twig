{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Pannier{% endblock title %}

{% block content %}
    <div class="row-fluid">
        <div class="span12 well">
            <div class="row-fluid">
                <ul class="nav nav-pills border">
                    <li class="pull-left"><h4>Adresse de livraison </h4></li>
                </ul>
                {% if getsessionhelper() %}
                <div class="span8 offset2">
                    <ul id="breadcrumbs-one">
                        <li><span><strong>1.</strong> Votre Panier</span></li>
                        <li><span><strong>2.</strong> Résumé</span></li>
                        <li><span class="current"><strong>3.</strong> Adresse</span></li>
                        <li><span><strong>4.</strong> Frais de port</span></li>
                        <li><span><strong>5.</strong> Paiement</span></li>
                    </ul>
                </div>
                {% else %}
                      <div class="span10 offset1">
                    <ul id="breadcrumbs-one">
                        <li><span><strong>1.</strong> Votre panier</span></li>
                        <li><span><strong>2.</strong> Résumé</span></li>
                        <li><span><strong>3</strong> Identifiez vous</span></li>
                        <li><span class="current"><strong>4.</strong> Adresse</span></li>
                        <li><span><strong>5.</strong> Frais de port</span></li>
                        <li><span><strong>6.</strong> Paiement</span></li>
                    </ul>
                </div>  
                {% endif %}
                    <div class="span11">
                        <hr>
                        <p class="text-center">Veuillez saisir l'adresse dont vous souhaitez effectuer la livraison</p>
                   </div>
                    <form action="/paiement/paiement/InsertAdr" method="POST" class="form-horizontal offset2">
                       <div class="control-group">
                            <label class="control-label" for="adresse">Adresse <span class="required">*</span></label>
                            <div class="controls">
                                <textarea name="adresse" placeholder="Votre Adresse" class="input-large"  required="required"></textarea>
                                <div class="error">
                                        {{ form_error('adresse') }}         
                                    </div>
                                </div>
                            </div>
                 
                        <div class="control-group pull-right">
                            <div class="controls">
                                <button type="submit" name="submit" class="btn pull-right btn-inverse">Suivant  <i class="icon-chevron-right icon-white"></i></button>
                            </div>
                        </div>
                    
                </form>
             
           </div>
        </div>
         
    </div>
    {% block partenaires %} {{parent()}} {% endblock partenaires %}
    {% endblock content %}
