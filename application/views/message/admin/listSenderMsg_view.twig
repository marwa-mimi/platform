{% extends "/layout/admin-layout.twig" %}{% block title %} {{parent()}} - Espace Administrateur{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well" style="min-height: 585px">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h3>Espace Administrateur</h3></li>                </ul>                {% if msgs == NULL %}                       <div class="alert alert-info"><p class="text-center"><strong>Vous n'avez aucun message.</strong></p></div>                {%else%}                        {%for msg in msgs %}               <ul class="unstyled">                            <li class="well" style="background-color: rgb(248, 248, 248);min-height: 30px;">                                <p class="pull-left">                                    <span><i class="icon-user"></i> <strong>{{msg.login}}</strong></span>                                </p>                                <a class="pull-right btn" href="/message/msgcommadmin/msg_conv_comm_admin/{{msg.idcom}}/{{msg.login}}"><i class="icon-eye-open"></i> voir message</a>                            </li>                        </ul>                                      {%endfor%}               {%endif%}                        </div>                </div>               </div>   </div>    {% endblock content %}