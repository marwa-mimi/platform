{% extends "/layout/admin-layout.twig" %}{% block title %} {{parent()}} - Espace Administrateur{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well" style="min-height: 585px">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h3>Espace Administrateur</h3></li>                </ul>                {% if msgs == NULL %}                       <div class="alert alert-info"><p class="text-center"><strong>Vous n'avez aucun message.</strong></p></div>                {%else%}                        {%for msg in msgs %}               <div class="row">                         <ul class="unstyled">                            <li class="span11 well-small" style="background-color: white">                                <p class="pull-left">                                    <span><i class="icon-user"></i> <strong>{{msg.nom}}</strong></span>                                </p>                                <a class="pull-right btn" href="/message/msgcommadmin/msg_conv_comm_admin/{{msg.idcom}}/{{msg.nom}}"><i class="icon-eye-open"></i> voir message</a>                            </li>                        </ul>                   </div>                    {%endfor%}               {%endif%}                 </div>               </div>   </div>    {% endblock content %}