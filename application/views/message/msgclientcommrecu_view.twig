{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Gestion Produit{% endblock title %}{% block head %}    <link type="text/css" href="{{base_url()}}assets/css/fg.menu.css" media="screen" rel="stylesheet" />{% endblock head %}{% block container %}    <div class="row">        {% block menuVertical%}{{parent()}}{% endblock menuVertical%}        {% block content %}            <div class="span9">                <div class="well">                    <div class="span8">                        <h1> {{ title }}</h1>                     </div>                        {%for msg in msgs %}                           <p> {{msg.nom}}                         </p>                         <a href="/message/msgclientcomm/voirmsgclientcomm/{{msg.idcl}}/{{msg.idp}}">voir msg</a>                        {%endfor%}                                                       </div>            </div>        {% endblock content %}        </div>        {% block partenaires %} {{parent()}} {% endblock partenaires %}{% endblock container %}{% block js %} {#---Menu Vertical---#}<script type="text/javascript" src="{{base_url()}}assets/js/fg.menu.js"></script><script type="text/javascript">        $(function(){        $('.fg-button').hover(        function(){ $(this).removeClass('ui-state-default').addClass('ui-state-focus'); },        function(){ $(this).removeClass('ui-state-focus').addClass('ui-state-default'); }    );        $('#hierarchybreadcrumb').menu({content: $('#hierarchybreadcrumb').next().html(), backLink: false});	    });    </script> {% endblock js %} 