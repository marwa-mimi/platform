{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Liste des messages{% endblock title %}{% block container %}    <div class="row">        {% block menuVertical%}{% endblock menuVertical%}        {% block content %}           <div class="span12 well">                <div class="span11">                    <h3 class="text-center">Liste des messages</h3>                    <hr>               </div>                {% if msgs == NULL %}               <div class="alert alert-info"><h5 class="text-center">Vous n'avez aucun message.</h5></div>               {%else%}                {%for msg in msgs %}                    <ul class="unstyled">                        <li class="span11 well-small" style="background-color: white">                            <p class="pull-left">                                <span><i class="icon-user"></i> <strong>{{msg.nom}}</strong></span>                            </p>                            <a class="pull-right btn" href="/message/msgclientcomm/voirmsgclientcomm/{{msg.idcl}}/{{msg.idp}}/{{msg.nom}}"><i class="icon-eye-open"></i> voir message</a>                        </li>                    </ul>{%endfor%}                {%endif%}                </div>        {% endblock content %}        </div>        {% block partenaires %} {{parent()}} {% endblock partenaires %}{% endblock container %}