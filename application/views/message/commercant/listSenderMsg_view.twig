{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Messages{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12 well">            <div class="row-fluid">                <ul class="nav nav-pills border">                    <li class="pull-left"><h4>Liste des Messages</h4></li>                </ul>                {% if msgs == NULL %}               <div class="alert alert-info"><h5 class="text-center">Vous n'avez aucun message.</h5></div>               {%else%}                {%for msg in msgs %}                    <ul class="unstyled">                        <li class="well" style="background-color: rgb(248, 248, 248);min-height: 30px;">                            <p class="pull-left">                                <span><i class="icon-user"></i> <strong>{{msg.nom}}</strong></span>                            </p>                            <a class="pull-right btn" href="/message/msgclientcomm/voirmsgclientcomm/{{msg.idcl}}/{{msg.idp}}/{{msg.nom}}"><i class="icon-eye-open"></i> voir message</a>                        </li>                    </ul>{%endfor%}                {%endif%}                </div>        </div>             </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}    {% endblock content %}          