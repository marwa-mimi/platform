{% extends "/layout/layout.twig" %}{% block title %} {{parent()}} - Notification{% endblock title %}{% block content %}    <div class="row-fluid">        <div class="span12">            <div class="row-fluid">                <div class="span9 well" style="min-height:302px">                <ul class="nav nav-pills border">                    <li class="pull-left"><h4>Liste des Notifications</h4></li>                </ul>                {%if req == NULL %}                <div class="alert alert-info">                    <p class="text-center"><strong>Pas de notification pour le moment</strong></p>                </div>                {%else%}                    {%set nbactiv = 0 %}                    {%for var in req%}                         {%if var.notifpaiement != 0%}                        {%set nbactiv = nbactiv + 1 %}                        {%else%}                        {%if var.vue == 1%}                           <div class="alert alert-success">                               <a href="/notification/notif/deleteclient/{{var.idnotifClient}}" class="close" data-dismiss="alert">&times;</a>                               <p>{{var.message}}  <strong>Vue</strong></p>                           </div>                        {%else%}                       <div class="alert">                           <p>{{var.message}} <a href="/forum/forum/afficherDetail/{{var.objNotif}}/{{var.idnotifClient}}">Voir sujet</a></p>                       </div>                        {%endif%}                {%endif%}             {%endfor%}                {% endif%}                         <p>                    {%if nbactiv > 0%}             <a href="/paiement/paiement/getnotifpayclient"><li>Notification pour paiement</li></a>                                                                                    {%endif%}                                               </p>                </div>                <div class="span3">                    {% block slider2 %}{{parent()}}{% endblock slider2 %}                </div>            </div>        </div>    </div>    {% block partenaires %} {{parent()}} {% endblock partenaires %}    {% endblock content %}