{% extends "/layout/layout.twig" %}

{% block title %} {{parent()}} - Inscription client{% endblock title %}

{% block content %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
               
                <div class="span9 well" style="min-height:302px">
                <ul class="nav nav-pills border">
                    <li class="pull-left"><h4>Inscrivez vous en tant que Client</h4></li>
                </ul>
                <form action="/inscription/inscription/inscriptionClient" method="POST" class="">
                    <div class="span10 well offset1" style="background-color: rgb(250, 250, 250)">
                    <div class="span6">
                            {#---Civilité---#}
                            <div class="control-group">
                                <label class="control-label" for="civilite">Civilité <span class="required">*</span></label>
                                <div class="controls">
                                    <label class="radio inline">
                                        <input type="radio" name="civilite" value="Mme" checked>Mme
                                    </label>
                                    <label class="radio inline">
                                        <input type="radio" name="civilite" value="Mlle">Mlle
                                    </label>
                                    <label class="radio inline">
                                        <input type="radio" name="civilite" value="Mr">Mr
                                    </label>
                                </div>
                            </div>
                            {#---Nom---#}
                            <div class="control-group">
                                <label class="control-label" for="nom">Nom <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="nom" for="nom" placeholder="Votre Nom" class="input-large" value="{{ set_value('nom') }}">
                                    <div class="error">
                                        {{ form_error('nom') }}         
                                    </div>
                                </div>
                            </div>
                            
                            {#---Prénom---#}
                            <div class="control-group">
                                <label class="control-label" for="prenom" >Prénom <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="prenom" placeholder="Votre Prénom" class="input-large" value="{{ set_value('prenom') }}">
                                    <div class="error">
                                        {{ form_error('prenom') }}         
                                    </div>
                                </div>
                            </div>
                            
                            {#---Email---#}
                            <div class="control-group">
                                <label class="control-label" for="email">E-mail <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="email" name="email" placeholder="Votre E-mail" class="input-large" value="{{ set_value('email') }}">
                                    <div class="error">
                                        {{ form_error('email') }}         
                                    </div>
                                     <div class="error">
                                        {{ form_error('errortotal') }}  
                                    </div>
                                </div>
                            </div>
                            
                            {#---Login---#}
                            <div class="control-group">
                                <label class="control-label" for="login">Login <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="login" placeholder="Votre Nom d'utilisateur" class="input-large" value="{{ set_value('login') }}">
                                    <div class="error">
                                        {{ form_error('login') }} 
                                    </div>
                                    <div class="error">
                                        {{ form_error('errortotal') }}  
                                    </div>
                                </div>
                            </div>
                            
                            {#---Mot de Passe---#}
                            <div class="control-group">
                                <label class="control-label" for="pwd">Mot de Passe <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="password" name="pwd" placeholder="Votre Mot de Passe" class="input-large">
                                    <div class="error">
                                        {{ form_error('pwd') }}         
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            {#---Confirmatino Mot de Passe---#}
                            <div class="control-group">
                                <label class="control-label" for="confpwd">Mot de Passe (Confirmation) <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="password" name="confpwd" placeholder="Confirmer Votre Mot de Passe" class="input-large">
                                    <div class="error">
                                        {{ form_error('confpwd') }}         
                                    </div>
                                </div>
                            </div>
                            
                            {#---Adressse---#}
                            <div class="control-group">
                                <label class="control-label" for="adresse">Adresse <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="adresse" placeholder="Votre Adresse" class="input-large" value="{{ set_value('adresse') }}">
                                    <div class="error">
                                        {{ form_error('adresse') }}         
                                    </div>
                                </div>
                            </div>
                        
                            {#---Pays---#}
                            <div class="control-group">
                                <label class="control-label" for="pays">Pays <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="pays" placeholder="Votre Adresse" class="input-large" value="{{ set_value('pays') }}">
                                    <div class="error">
                                        {{ form_error('pays') }}         
                                    </div>
                                </div>
                            </div>
                            
                            {#---ville---#}
                            <div class="control-group">
                                <label class="control-label" for="ville">Ville <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="ville" placeholder="Votre Adresse" class="input-large" value="{{ set_value('ville') }}">
                                    <div class="error">
                                        {{ form_error('ville') }}         
                                    </div>
                                </div>
                            </div>
                            
                            {#---Télephone---#}
                            <div class="control-group">
                                <label class="control-label" for="tel">Numéro téléphone <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="tel" placeholder="Votre Numéro De Téléphone" class="input-large" value="{{ set_value('tel') }}">
                                    <div class="error">
                                        {{ form_error('tel') }}         
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                            {#---S'enregistrer---#}
                            <div class="control-group span11">
                                <div class="controls offset8">
                                    <button type="submit" name="submit" class="btn btn-inverse">S'enregistrer</button>
                                    <button type="reset" name="annuler" class="btn btn-inverse">Annuler</button>
                                </div>
                            </div>
                </form>
                </div>
                <div class="span3">
                      {% block slider2 %}{{parent()}}{% endblock slider2 %}
               </div>
            </div>
        </div>
         
    </div>
    {% block partenaires %} {{parent()}} {% endblock partenaires %}
    {% endblock content %}